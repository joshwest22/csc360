<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.AdderController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="firstNumLabel" text="First Number" />
                  <TextField />
                  <Label fx:id="secondNumLabel" text="Second Number" />
                  <TextField />
                  <Button mnemonicParsing="false" onAction="#onClickAdd" text="Add" />
               </children>
            </HBox>
            <Label text="Result: " />
            <Label fx:id="resultValLabel" text="Label" />
         </children>
      </VBox>
   </center>
</BorderPane>
