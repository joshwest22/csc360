<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.CashController">
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Present Balance $">
               <font>
                  <Font size="48.0" />
               </font>
            </Label>
            <Label fx:id="cashBalanceLabel" text="50.34">
               <font>
                  <Font size="48.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Amount">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <TextField fx:id="deltaCashTextField" prefHeight="28.0" prefWidth="135.0" />
            <Button mnemonicParsing="false" onAction="#onAddCash" text="Add">
               <font>
                  <Font size="32.0" />
               </font>
            </Button>
            <Button layoutX="173.0" layoutY="10.0" mnemonicParsing="false" onAction="#onRemoveCash" text="Remove">
               <font>
                  <Font size="32.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
